require 'spec_helper'
describe Event do
it {should belong_to(:user) }
it {should validate_presence_of(:title)}
it {should validate_presence_of(:notes)}
it {should validate_presence_of(:from_date)}
it {should validate_presence_of(:to_date)}
it {should validate_presence_of(:from_time)}
it {should validate_presence_of(:to_time)}
it {should validate_presence_of(:status)}
it {should validate_presence_of(:category_a)}
it {should validate_presence_of(:category_b)}
it {should validate_presence_of(:category_c)}
it {should validate_presence_of(:user_id)}
end

