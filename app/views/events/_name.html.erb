<h3>Events</h3>
<%if @events.present?%>
<table border=1>
<thead>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>From Date</th>
    <th>Action</th>
  </tr>
</thead>
<tbody>
<% @events.each do |e| %>
<%a=e.id%>
  <tr class="parent" id="<%=a%>" style="cursor: pointer; " title="Click to expand/collapse">
    <td><%=e.id%></td>
    <td><%= e.title%></td>
    <td><%= e.from_date%></td><td> 
 <%=link_to "Edit",edit_event_path(e)%>
 </td>
  </tr>
   <tr class="child-<%=a%>" style="display: none; ">
    <td></td>
    <td>Notes:<%= e.notes%></td>
    <td>ToDate:<%= e.to_date%></td>
    <td>Assignedto:<%= e.assign_to%>
    Category:<%if e.category_a==true%><%= e.category_a%><%end%>
        <%if e.category_b==true%><%= e.category_b%><%end%>
        <%if e.category_c==true%><%= e.category_c%><%end%>
    </td>
  </tr>
<% end %>
</tbody>
</table>
<%else%>
<p>No Users</p>
<%end%>
